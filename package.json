{
  "name": "architect",
  "version": "0.0.1",
  "displayName": "Architect",
  "description": "Official extension for Architect, including syntax highlighting for the Architect file format (app.arc, .arc, config.arc, and prefs.arc)",
  "publisher": "architect",
  "author": "Ryan Block <hello@ryanblock.com>",
  "license": "Apache-2.0",
  "homepage": "https://arc.codes",
  "repository": {
    "type": "git",
    "url": "https://github.com/architect/vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/architect/vscode-extension/issues"
  },
  "contributes": {
    "languages": [
      {
        "id": "arc",
        "aliases": [
          "Architect",
          "app.arc",
          ".arc",
          "architect"
        ],
        "extensions": [
          ".arc",
          ".arc-config",
          ".arc-env"
        ],
        "filenames": [
          "app.arc",
          ".arc",
          "config.arc",
          "preferences.arc",
          "prefs.arc",
          ".arc-config",
          ".arc-env"
        ],
        "firstLine": "^@.*",
        "configuration": "./arc-language-config.json"
      }
    ],
    "grammars": [
      {
        "language": "arc",
        "scopeName": "source.arc",
        "path": "./arc-textmate.json"
      }
    ]
  },
  "engines": {
    "vscode": "^0.10.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "icon": "assets/architect-icon-white-transparent.png",
  "galleryBanner": {
    "color": "#333",
    "theme": "dark"
  },
  "markdown": "github",
  "devDependencies": {
    "@architect/syntaxes": "git+https://github.com/architect/syntaxes.git",
    "vsce": "^1.97.0"
  },
  "scripts": {
    "build": "rm arc-textmate.json && cp node_modules/@architect/syntaxes/arc-textmate.json ./"
  },
  "keywords": [
    "aws",
    "arc",
    "architect",
    "serverless",
    "app.arc",
    ".arc"
  ]
}
